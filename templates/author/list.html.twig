{# templates/author/list.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Authors{% endblock %}
{% block body %}
<h2>Liste des auteurs</h2>
<table border="1" cellpadding="6">
    <tr><th>Id</th><th>Username</th><th>Email</th><th>Nb books</th><th>Actions</th></tr>
    {% for a in authors %}
        <tr>
            <td>{{ a.id }}</td>
            <td>{{ a.username }}</td>
            <td>{{ a.email }}</td>
            <td>{{ a.nbBooks }}</td>
            <td>
                <a href="{{ path('author_edit',{'id':a.id}) }}">edit</a> |
                <a href="{{ path('author_delete',{'id':a.id}) }}" onclick="return confirm('Sure?')">delete</a>
            </td>
        </tr>
    {% endfor %}
</table>
<br>
<a href="{{ path('author_add') }}">Add new author</a>
{% endblock %}